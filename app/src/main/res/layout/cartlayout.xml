<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageViewCart"
            android:layout_width="70dp"
            android:layout_height="86dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/productnameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/imageViewCart"
            android:layout_toRightOf="@id/imageViewCart"
            android:textColor="#333"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/shopnameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/productnameCart"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@id/imageViewCart"
            android:layout_toRightOf="@id/imageViewCart"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/priceCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shopnameCart"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@id/imageViewCart"
            android:layout_toRightOf="@id/imageViewCart"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#333"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btndelete"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/priceCart"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:background="#2299A8"
            android:text="@string/btn_delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorLink="#FFFFFF"
            android:textSize="15dp" />




    </RelativeLayout>
</LinearLayout>
